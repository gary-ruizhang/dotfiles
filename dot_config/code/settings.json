{
    "workbench.startupEditor": "none",
    "workbench.colorTheme": "Nord",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.editor.showTabs": false,
    "breadcrumbs.enabled": false,
    
    "editor.fontSize": 26,
    "editor.lineNumbers": "relative",
    "editor.fontFamily": "OperatorMonoSSmLig Nerd Font Mono, Menlo, Monaco, 'Courier New', monospace",
    "editor.acceptSuggestionOnEnter": "smart",
    "editor.tabCompletion": "on",
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.fontLigatures": true,
    "editor.suggest.showSnippets": false,
    "editor.suggestSelection": "first",
    "editor.inlineSuggest.enabled": true,
    "editor.inlayHints.enabled": "offUnlessPressed",
    "editor.tabFocusMode": false,

    // vim
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.hlsearch": true,
    "vim.leader": "<space>",

    "vim.autoSwitchInputMethod.switchIMCmd": "/usr/local/bin/macism {im}",
    "vim.autoSwitchInputMethod.defaultIM": "com.apple.keylayout.ABC",
    "vim.autoSwitchInputMethod.enable": true,
    "vim.autoSwitchInputMethod.obtainIMCmd": "/usr/local/bin/macism",
    
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<C-q>"
            ],
            "commands": [
                "workbench.action.showAllEditorsByMostRecentlyUsed"
            ]
        },
        {
            "before": [
                "<C-l>"
            ],
            "commands": [
                ":nohl"
            ]
        },
        // easymotion
        {
            "before": [
                "s"
            ],
            "after": [
                "<leader>",
                "<leader>",
                "2",
                "s"
            ]
        },
        {
            "before": [
                "f"
            ],
            "after": [
                "<leader>",
                "<leader>",
                "f"
            ]
        },
        {
            "before": [
                "F"
            ],
            "after": [
                "<leader>",
                "<leader>",
                "F"
            ]
        },
        {
            "before": [
                "g",
                "r"
            ],
            "commands": [
                "editor.action.goToReferences"
            ]
        },
        {
            "before": [
                "g",
                "n"
            ],
            "commands": [
                "editor.action.marker.nextInFiles"
            ]
        },
        {
            "before": [
                "g",
                "p"
            ],
            "commands": [
                "editor.action.marker.prevInFiles"
            ]
        },
        {
            "before": [
                ";"
            ],
            "after": [
                ":"
            ]
        },
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [
                ";"
            ],
            "after": [
                ":"
            ]
        },
    ],
    "security.workspace.trust.untrustedFiles": "open",
    "extensions.ignoreRecommendations": true,
    "terminal.integrated.env.osx": {
        "FIG_NEW_SESSION": "1"
    },
    "debug.allowBreakpointsEverywhere": true,
    "terminal.integrated.tabFocusMode": false,
}