set hlsearch               " Keep matches highlighted.
set visualbell
set noerrorbells
set keep-english-in-normal
set relativenumber
set number
set ideajoin

nnoremap <silent> <C-l> :<C-u>nohl<CR><C-l>
nnoremap g; g;zz
nnoremap g, g,zz
nnoremap ' `
nnoremap ` '
nnoremap * *zzzv
nnoremap # #zzzv
nnoremap n nzzzv
nnoremap N Nzzzv
nnoremap ; :
vnoremap ; :
nnoremap j gj
nnoremap k gk

nnoremap gr gd
nnoremap }  :action EditorForwardParagraph<CR>
nnoremap {  :action EditorBackwardParagraph<CR>
vnoremap }  :action EditorForwardParagraphWithSelection<CR>
vnoremap {  :action EditorBackwardParagraphWithSelection<CR>
nnoremap ]m :action MethodDown<CR>
nnoremap [m :action MethodUp<CR>
nnoremap gm :action MethodDown<CR>
nnoremap gM :action MethodUp<CR>
nnoremap gn :action GotoNextError<CR>
nnoremap gp :action GotoPreviousError<CR>
nnoremap g[ :action GotoImplementation<CR>
map ga <Action>(ShowIntentionActions)
nmap <C-o> :action Back<CR>
nmap <c-i> :action Forward<CR>

